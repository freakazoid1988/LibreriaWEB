<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AggiungiLibroServlet</servlet-name>
        <servlet-class>libreria.web.AggiungiLibroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancellaLibroServlet</servlet-name>
        <servlet-class>libreria.web.CancellaLibroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisualizzaLibriServlet</servlet-name>
        <servlet-class>libreria.web.VisualizzaLibriServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AggiungiLibroServlet</servlet-name>
        <url-pattern>/AggiungiLibroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancellaLibroServlet</servlet-name>
        <url-pattern>/CancellaLibroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisualizzaLibriServlet</servlet-name>
        <url-pattern>/VisualizzaLibriServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        </welcome-file-list>
    </web-app>
